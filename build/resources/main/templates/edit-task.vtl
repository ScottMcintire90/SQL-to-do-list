<h1>Edit task name</h1>

<form action="/tasks/$task.getId()" method="post">
  <input id="task_id" name="task_id" type="hidden" value="$task.getId()">
  <label for="newDescription">Task name</label>
  <input id="newDescription" name="newDescription" type="text">
  <button type="submit" class="btn btn-success">Edit Task</button>
</form>

<p><a href="/">Home</a></p>
